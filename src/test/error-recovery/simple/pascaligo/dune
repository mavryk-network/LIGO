(rule
 (target results.csv)
 (deps
  (:script ../../test.sh)
  (glob_files *.ligo)
  (glob_files original/*.ligo)
  (:parser ../../../../passes/02-parsing/pascaligo/ParserMain.exe))
 (action
  (run %{script} *.ligo %{parser})))

(rule
 (alias runtest)
 (action
  (diff results.csv.expected results.csv)))
