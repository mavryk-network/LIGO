(rule
 (target results.csv)
 (deps
  (:script ../../test.sh)
  (glob_files *.religo)
  (glob_files original/*.religo)
  (:parser ../../../../passes/02-parsing/reasonligo/ParserMain.exe))
 (action
  (run %{script} *.religo %{parser})))

(rule
 (alias runtest)
 (deps results.csv)
 (action
  (diff results.csv.expected results.csv)))
