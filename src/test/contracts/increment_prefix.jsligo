namespace IncDec {
  type storage = int;
  type ret = [list<operation>, storage];

  @entry
  function increment (_: unit, store : storage) : ret {
    let s = store
    return [list([]), ++s];
  }

  @entry
  function decrement (_: unit, store : storage) : ret {
    let s = store
    return [list([]), --s];
  }

  @entry
    const reset = (_p : unit, _s : storage) : ret =>
    [list([]), 0];
};

const test_increment = (() => {
  let initial_storage = 42;
  let [taddr, _code, _size] = Test.originate_module(contract_of(IncDec), initial_storage, 0tez);
  let contr = Test.to_contract(taddr);
  Test.transfer_to_contract_exn(contr, Increment(), 1mutez);
  return assert(Test.get_storage(taddr) == initial_storage + 1);
}) ();
